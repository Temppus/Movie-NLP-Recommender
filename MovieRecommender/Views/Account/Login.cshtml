@using MovieRecommender.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui teal image header">
            <span class="content">
                Log-in to your account
            </span>
        </h2>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "ui large form" }))
        {
            @Html.AntiForgeryToken()

            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" name="UserName" placeholder="Username">
                    </div>
                </div>

                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="Password" placeholder="Password">
                    </div>
                </div>

                <input type="submit" value="Log in" class="ui fluid large teal submit button" />
            </div>
        }


        <div class="ui message">
            New to us ? @Html.ActionLink("Register", "Register")
        </div>
    </div>
</div>

